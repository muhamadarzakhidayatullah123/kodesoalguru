<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/placeholder_activity_padding">

        <View
            android:id="@+id/text_exam_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/placeholder_height"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_placeholder"
            app:layout_constraintEnd_toStartOf="@+id/text_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/text_status"
            android:layout_width="@dimen/placeholder_short_width"
            android:layout_height="@dimen/placeholder_height"
            android:background="@drawable/shape_placeholder"
            app:layout_constraintBottom_toBottomOf="@+id/text_exam_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_exam_title" />

        <View
            android:id="@+id/text_subject"
            android:layout_width="@dimen/placeholder_long_width"
            android:layout_height="@dimen/placeholder_height"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_exam_title" />

        <View
            android:id="@+id/text_duration"
            android:layout_width="@dimen/placeholder_short_width"
            android:layout_height="@dimen/placeholder_height"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_subject" />

        <View
            android:id="@+id/text_datetime"
            android:layout_width="@dimen/placeholder_medium_width"
            android:layout_height="@dimen/placeholder_height"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/shape_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_duration" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>